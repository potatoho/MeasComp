{Bd10,  0x02    0,     1}
{Bd11,  0x04    0,     1}
{Bd12,  0x08    0,     1}
{Bd13,  0x10    0,     1}
{Bd14,  0x20    0,     1}
{Bd15,  0x40    0,     1}
{Bd16,  0x80    0,     1}
{Bd17,  0x01    1,     2}
{Bd18,  0x02    1,     2}
{Bd19,  0x04    1,     2}
{Bd20,  0x08    1,     2}
